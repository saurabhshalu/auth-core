{
    "compilerOptions": {
        "target": "ES2020",
        "moduleResolution": "Node",
        "allowJs": true,
        "checkJs": false,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist"
    ]
}